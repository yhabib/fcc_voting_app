include ./includes/header.pug

main
    .row
        ul.collapsible(data-collapsible="accordion")
            each poll in polls
                li.col.s10.offset-s1.m8.offset-m2.l6.offset-l3
                    .collapsible-header 
                        span.collection-item.col.s10.offset-s1.m8.offset-m2.l6.offset-l3= poll.name
                    .collapsible-body
                        ul
                            each option in poll.options
                                li #{option.value} <span class="badge">#{option.count}</span>
                    //- a(href="/poll/"+poll._id).collection-item.col.s10.offset-s1.m8.offset-m2.l6.offset-l3= poll.name


include ./includes/footer.pug